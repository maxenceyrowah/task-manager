{
  "version": 2,
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    },
    {
      "src": "apps/backend/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/tasks",
      "dest": "apps/backend/api/tasks/index.ts"
    },
    {
      "src": "/api/tasks/post",
      "dest": "apps/backend/api/tasks/post.ts"
    },
    {
      "src": "/api/tasks/(?<id>[^/]+)",
      "dest": "apps/backend/api/tasks/[id].ts"
    },
    {
      "src": "/(.*)",
      "dest": "apps/frontend/dist/$1"
    }
  ]
}
